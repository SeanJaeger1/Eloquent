{
  "name": "eloquent",
  "version": "1.0.0",
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "expo start",
    "android": "expo start --android",
    "ios": "expo start --ios",
    "web": "expo start --web --bundler metro",
    "build:web": "npx expo export:web",
    "prebuild": "expo prebuild",
    "build:android": "expo build:android",
    "build:ios": "expo build:ios",
    "dev": "expo start --dev-client",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "typecheck": "tsc --noEmit",
    "lint": "eslint \"./App.tsx\" \"./components/**/*.[tj]s?(x)\" \"./hooks/**/*.[tj]s?(x)\" \"./utils/**/*.[tj]s?(x)\" --max-warnings=0",
    "lint:fix": "eslint \"./App.tsx\" \"./components/**/*.[tj]s?(x)\" \"./hooks/**/*.[tj]s?(x)\" \"./utils/**/*.[tj]s?(x)\" --fix",
    "format": "prettier --write \"./App.tsx\" \"./components/**/*.[tj]s?(x)\" \"./hooks/**/*.[tj]s?(x)\" \"./utils/**/*.[tj]s?(x)\"",
    "fix-all": "npm run format && npm run lint:fix",
    "prepare": "husky install",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "clean": "rm -rf node_modules .expo web-build && npm install"
  },
  "dependencies": {
    "@expo/metro-runtime": "^3.2.3",
    "@react-navigation/bottom-tabs": "^6.5.14",
    "@react-navigation/native": "^6.1.12",
    "@sentry/react-native": "~5.24.3",
    "crypto-browserify": "^3.12.0",
    "dotenv": "^16.4.5",
    "expo": "^51.0.38",
    "expo-av": "~14.0.7",
    "expo-constants": "~16.0.2",
    "expo-router": "~3.5.23",
    "expo-status-bar": "~1.12.1",
    "firebase": "^10.8.0",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-svg": "15.2.0",
    "react-native-web": "~0.19.6",
    "stream-browserify": "^3.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-typescript": "^7.25.7",
    "@testing-library/react-native": "^12.3.2",
    "@types/babel__core": "^7.20.5",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-native": "^0.72.8",
    "@typescript-eslint/eslint-plugin": "^8.11.0",
    "@typescript-eslint/parser": "^8.11.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.3",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.1",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-native": "^4.1.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "jest-expo": "^51.0.4",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "react-test-renderer": "18.2.0",
    "tsc-files": "^1.1.4",
    "typescript": "^5.3.3"
  },
  "jest": {
    "preset": "jest-expo",
    "transformIgnorePatterns": [
      "node_modules/(?!((jest-)?react-native|@react-native(-community)?)|expo(nent)?|@expo(nent)?/.*|@expo-google-fonts/.*|react-navigation|@react-navigation/.*|@unimodules/.*|unimodules|sentry-expo|native-base|react-native-svg)"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "tsc-files --noEmit"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "private": true
}
